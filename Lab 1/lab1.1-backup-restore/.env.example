# ---------- PostgreSQL connection ----------
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
# Database to PROVISION and BACKUP from:
PGDATABASE=shop
# Set only if password auth is enabled in pg_hba.conf
PGPASSWORD=

# ---------- Backup/Restore options ----------
# Where to store/read backups
BACKUP_DIR=/tmp/pg_backups

# pg_dump format: c=custom, d=directory, p=plain
DUMP_FORMAT=c

# Optional: dump only one table (e.g., public.products). Leave empty to dump all.
TABLE_FILTER=

# For restore: target database name (created if absent)
RESTORE_DATABASE=shop_copy

# Flags (true/false)
SCHEMA_ONLY=false
DATA_ONLY=false

# Parallel jobs (used for -Fd directory dumps and for pg_restore on -Fc/-Fd)
JOBS=2

# Connection timeout (seconds)
PGCONNECT_TIMEOUT=5
